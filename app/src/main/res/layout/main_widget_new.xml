<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:columnCount="3"
    android:padding="@dimen/widget_margin"
    android:rowCount="3">

    <RelativeLayout
        android:layout_row="0"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_columnWeight="1"
        android:background="#99e8d0">

        <TextView
            android:id="@+id/todayEvents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="Paul Ascension Day Teooo" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_row="0"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:background="#99B9E8">

        <TextView
            android:id="@+id/tvCurrentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/product_sans_regular"
            android:gravity="left"
            android:text="14:36"
            android:textColor="@android:color/white"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/timeZone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCurrentTime"
            android:layout_marginStart="5dp"
            android:gravity="left"
            android:text="europe/berlin gmt+1"
            android:textColor="@android:color/white"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tvAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timeZone"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/product_sans_regular"
            android:gravity="left"
            android:text="alarm 07:36"
            android:textColor="@android:color/white"
            android:textSize="28sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_row="1"
        android:layout_rowSpan="2"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_columnWeight="1"
        android:background="#E0E899">

    </RelativeLayout>

    <RelativeLayout
        android:layout_row="1"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:background="#E89999">

        <TextView
            android:id="@+id/startUpcoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16:30"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/endUpcoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/startUpcoming"
            android:text="16:30"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/nameUpcomming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/endUpcoming"
            android:fontFamily="@font/product_sans_bold"
            android:gravity="center"
            android:text="Coffeebreak"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvUpcomingAppointmentlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameUpcomming"
            android:fontFamily="@font/product_sans_regular"
            android:gravity="center"
            android:text="Starbucks, 17 Ocean Blvd"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_row="2"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_columnWeight="1"
        android:background="#7FF470">

        <TextView
            android:id="@+id/tvAppt2Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="21 40" />

        <TextView
            android:id="@+id/tvAppt2Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAppt2Title"
            android:fontFamily="@font/product_sans_bold"
            android:gravity="center"
            android:text="Dinner"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_row="2"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:layout_column="2"
        android:layout_columnSpan="1"
        android:layout_columnWeight="1"
        android:background="#70A5F4">

        <TextView
            android:id="@+id/tvAppt3Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="21 40" />

        <TextView
            android:id="@+id/tvAppt3Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAppt3Time"
            android:fontFamily="@font/product_sans_bold"
            android:gravity="center"
            android:text="Dinner"
            android:textColor="@android:color/black" />
    </RelativeLayout>

</GridLayout>