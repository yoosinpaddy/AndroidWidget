<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvFontSmall"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/product_sans_regular"
        android:gravity="center"
        android:text="Small"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/tvFontLarge"
        app:layout_constraintEnd_toStartOf="@id/tvFontMedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvFontLarge" />

    <TextView
        android:id="@+id/tvFontMedium"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Medium"
        android:textSize="12.5dp"
        app:layout_constraintBottom_toBottomOf="@id/tvFontLarge"
        app:layout_constraintEnd_toStartOf="@id/tvFontLarge"
        app:layout_constraintStart_toEndOf="@id/tvFontSmall"
        app:layout_constraintTop_toTopOf="@id/tvFontLarge" />

    <TextView
        android:id="@+id/tvFontLarge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Large"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvFontMedium"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seekBarFontSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:max="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFontLarge" />

</androidx.constraintlayout.widget.ConstraintLayout>